generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Cliente {
  id       String     @id @default(uuid())
  nome     String
  email    String
  cpf      String
  telefone String
  cidade   String
  estado   String
  senha    String
  Consulta Consulta[]

  @@map("clientes")
}

model Profissional {
  id            String     @id @default(uuid())
  nome          String
  email         String
  cpf           String
  telefone      String
  area          String
  especialidade String
  cidade        String
  estado        String
  senha         String
  Consulta      Consulta[]

  @@map("profissionais")
}

model Consulta {
  id             String  @id @default(uuid())
  clienteId      String
  profissionalId String
  data           String
  hora           Int
  estado         Boolean

  cliente      Cliente      @relation(fields: [clienteId], references: [id])
  profissional Profissional @relation(fields: [profissionalId], references: [id])

  @@unique([clienteId, profissionalId])
}
